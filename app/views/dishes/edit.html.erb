<h1 class="text-3xl font-bold mb-6">Add dish</h1>

<section class="dark:bg-slate-800 bg-white rounded-md px-8 py-6 drop-shadow">
  <%= form_with(model: @dish, local: true, data: { turbo: false }) do |f| %>
    <% if @dish.errors.any? %>
      <div class="bg-red-100 dark:bg-red-900 dark:text-red-100 border dark:border-red-600 border-red-400 text-red-700 px-4 py-3 rounded mb-2">
        <h2 class="font-semibold">The form contain <%= pluralize(@dish.errors.count, "error") %></h2>
        <ul class="list-disc p-4">
        <% @dish.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label :dish_group, class: 'font-medium dark:text-white text-gray-700' %>
    <%= f.text_field :dish_group, class: 'rounded border-slate-200 dark:border-slate-700 w-full mb-4 mt-2 text-black dark:bg-slate-900 dark:text-white' %>

    <%= f.label :name, class: 'font-medium dark:text-white text-gray-700' %>
    <%= f.text_field :name, class: 'rounded border-gray-200 dark:border-slate-700 w-full mb-4 mt-2 text-black dark:bg-slate-900 dark:text-white' %>

    <%= f.label :description, class: 'font-medium dark:text-white text-gray-700' %>
    <%= f.text_area :description, class: 'rounded border-gray-200 dark:border-slate-700 w-full mb-4 mt-2 text-black dark:bg-slate-900 dark:text-white' %>

    <%= f.label :price, class: 'font-medium dark:text-white text-gray-700' %>
    <%= f.number_field :price, class: 'rounded border-gray-200 dark:border-slate-700 w-full mb-4 mt-2 text-black dark:bg-slate-900 dark:text-white' %>

    <%= f.label :photo, class: 'font-medium dark:text-white text-gray-700' %>
    <%= f.file_field :photo, class: 'rounded border border-gray-200 dark:border-slate-700 w-full mb-4 mt-2 file:mr-2 file:py-2 file:px-4 file:rounded file:border-0 dark:file:bg-slate-900 dark:file:text-white', accept: 'image/*' %>

    <div class="flex justify-between items-center">
      <a class="text-sky-400 hover:underline" href="<%= dishes_path %>">&larr; Back to all dishes</a>
      <%= f.submit "Update", class: 'bg-sky-400 py-2 px-4 rounded-md hover:bg-sky-500 cursor-pointer transition text-white font-semibold dark:text-slate-950' %>
    </div>
  <% end %>
</section>
