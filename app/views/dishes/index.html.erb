<% content_for :title, "Dishes" %>

<header class="flex justify-between items-center mb-7">
  <h1 class="text-3xl font-bold">Dishes</h1>
  <a class="bg-slate-900 hover:bg-slate-700 text-white px-4 py-2 rounded font-semibold dark:bg-sky-500 dark:hover:bg-sky-400" href="<%= new_dish_path %>">Create dish</a>
</header>

<% if @dishes.any? %>
  <article class="grid md:grid-cols-2 xl:grid-cols-3 gap-10 mb-7">
    <% @dishes.each do |dish| %>
      <%= link_to dish_path(dish) do %>
        <section class="rounded-md overflow-hidden bg-white dark:bg-slate-800 drop-shadow">
          <div class="h-[250px]">
            <img class="w-full h-full object-cover" src="<%= url_for(dish.photo) %>" alt="<%= dish.name %>">
          </div>
            <h2 class="font-semibold text-xl text-center py-2"><%= dish.name %></h2>
        </section>
      <% end %>
    <% end %>
  </article>
<% else %>
  <p class="text-center justify-center">No dishes available.</p>
<% end %>

